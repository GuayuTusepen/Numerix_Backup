{
  "name": "Numerix - Aprendizaje Divertido",
  "short_name": "Numerix",
  "description": "Lecciones interactivas de matemáticas para niños por Numerix.",
  "id": "/numerix-app/",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "background_color": "#FAF8F0",
  "theme_color": "#FFC857",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "/icons/icon-any-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-any-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "description": "Pantalla de inicio de Numerix"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "description": "Ejemplo de lección de Numerix"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/plain": [".txt", ".numerix-lesson"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"]
      },
      "launch_type": "single-client"
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+numerix",
      "url": "/protocol-handler?data=%s"
    }
  ]
}
