{
  "name": "Numerix - Aprendizaje Divertido",
  "short_name": "Numerix",
  "description": "Lecciones interactivas de matemáticas para niños por Numerix.",
  "id": "/numerix-app/",
  "start_url": "/",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay"
  ],
  "orientation": "portrait-primary",
  "background_color": "#FAF8F0",
  "theme_color": "#FFC857",
  "scope": "/",
  "lang": "es-ES",
  "dir": "ltr",
  "categories": [
    "education",
    "games",
    "kids",
    "books"
  ],
  "iarc_rating_id": "YOUR_IARC_RATING_ID_HERE",
  "icons": [
    {
      "src": "/icons/icon-any-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Pantalla de Bienvenida de Numerix"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Selección de Lecciones de Numerix"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/plain": [".txt"],
        "application/vnd.numerix.lesson": [".nlson"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"]
      },
      "icons": [
        {
          "src": "/icons/icon-filehandler-512x512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+numerix",
      "url": "/protocol-handler?data=%s",
      "icons": [
        {
          "src": "/icons/icon-protocol-512x512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ]
    }
  ],
  "service_worker": {
    "src": "/sw.js"
  },
  "permissions": [
    "background-sync"
  ]
}
