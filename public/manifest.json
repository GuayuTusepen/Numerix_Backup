{
  "theme_color": "#FFC857",
  "background_color": "#FAF8F0",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "Numerix - Aprendizaje Divertido",
  "short_name": "Numerix",
  "description": "Lecciones interactivas de matemáticas para niños por Numerix.",
  "icons": [
    {
      "src": "/icons/icon-any-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-any-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "id": "/numerix-app/",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "orientation": "portrait-primary",
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Pantalla principal de Numerix"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Lección de ejemplo en Numerix"
    }
  ],
  "display_override": [
    "window-controls-overlay"
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/plain": [
          ".txt"
        ],
        "application/vnd.numerix.lesson": [
          ".numerix-lesson"
        ],
        "image/jpeg": [
          ".jpg",
          ".jpeg"
        ],
        "image/png": [
          ".png"
        ]
      },
      "launch_type": "single-client"
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+numerix",
      "url": "/protocol-handler?data=%s"
    }
  ],
  "categories": [
    "education",
    "kids",
    "games",
    "mathematics"
  ],
  "dir": "ltr",
  "lang": "es-ES",
  "iarc_rating_id": "YOUR_IARC_RATING_ID_HERE",
  "background": {
    "service_worker": "/sw.js"
  },
  "permissions": [
    "background-sync"
  ],
  "prefer_related_applications": false
}