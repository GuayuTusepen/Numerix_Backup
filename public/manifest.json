    },
    {
      "src": "/icons/icon-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable",
      "data_ai_hint": "app icon"
    },
    {
      "src": "/icons/temporal_icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
