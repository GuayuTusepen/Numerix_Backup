        "text/plain": [".txt"],
        "application/vnd.numerix-lesson": [".numerix-lesson", ".nlson"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"]
      },
      "icons": [
        {
          "src": "/icons/temporal_icon.png",
          "sizes": "512x512",
          "type": "image/png"
        }
