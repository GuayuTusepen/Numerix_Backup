  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+numerix",
      "url": "/protocol-handler?data=%s"
    }
  ],
  "background": {
    "service_worker": "/sw.js",
    "scripts": ["/sw.js"]
  },
  "permissions": [
    "background-sync"
  ],
  "categories": [
    "education",
    "games",
    "kids",
    "mathematics"
  ],
  "dir": "ltr",
